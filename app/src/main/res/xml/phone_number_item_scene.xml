<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/rv_item_tv_name" />
        <Constraint
            android:id="@+id/rv_item_edit"
            app:layout_constraintEnd_toStartOf="@id/rv_item_delete"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:layout_constraintBottom_toBottomOf="@+id/rv_item_ivphone"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/rv_item_ivphone" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/rv_item_tv_name" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" />
</MotionScene>
